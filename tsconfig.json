{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "src/app.ts",
        "src/config/*.ts",
        "src/models/*.ts",
        "src/controllers/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}