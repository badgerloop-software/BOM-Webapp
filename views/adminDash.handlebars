          <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">content_copy</i>
                  </div>
                  <p class="card-category">Orders Awating Approval</p>
                  <h3 class="card-title">
                    {{#if awaitingApproval}}
                    {{awaitingApproval}}
                    <small>Unapproved POs</small>
                    {{else}}
                    All orders approved!
                    {{/if}}
                  </h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <a href="/orders/view">View Orders</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-success card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">attach_money</i>
                  </div>
                  <p class="card-category">Total Spent</p>
                  <h3 class="card-title">
                    {{#if totalDollars}}
                    ${{totalDollars}}
                    {{else}}
                    No Orders Made Yet
                    {{/if}}
                  </h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">bookmark</i> Make a purchase request
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-danger card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">person</i>
                  </div>
                  <p class="card-category">Users Registered</p>
                  <h3 class="card-title">
                    {{#if numUsers}}
                    {{numUsers}}
                    <small>Users</small>
                    {{else}}
                    No Users Registered
                    {{/if}}
                  </h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">info</i> Manage Users
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-info card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">local_post_office</i>
                  </div>
                  <p class="card-category">Total Orders</p>
                  <h3 class="card-title">
                    {{#if numOrders}}
                    {{numOrders}}
                    <small>Orders Tracked</small>
                    {{else}}
                    No Orders Placed
                    {{/if}}
                  </h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">update</i> Just Updated
                  </div>
                </div>
              </div>
            </div>
          </div>
