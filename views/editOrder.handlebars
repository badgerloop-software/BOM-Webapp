<h1>Edit Order</h1>
<form id="editForm" action="/orders/edit" method="POST">
<label>Requestor:</label>
<input name="requestor" type="text" value="{{order.requestor}}">
<br>
<label>Item</label>
<input name="item" type="text" value="{{order.item}}">
<br>
<label>Subteam</label>
<select id="chooseSubteam" name="subteam" value="{{order.subteam}}">
  <option value="Analysis">Analysis</option>
  <option value="Battery">Battery</option>
  <option value="Braking">Braking</option>
  <option value="Controls">Controls</option>
  <option value="Electrical Reliablilty">Electrical Reliability</option>
  <option value="Electrical Hardware">Electrical Hardware</option>
  <option value="Executitive">Executitive</option>
  <option value="Powertrain">Powertrain</option>
  <option value="Propulsion">Propulsion</option>
  <option value="Software">Software</option>
  <option value="Stability">Stability</option>
  <option value="Structural">Structural</option>
</select>
<br>
<label>Supplier</label>
<input name="supplier" type="text" value="{{order.supplier}}">
<br>
<label>Product Number</label>
<input name="productNum" value="{{order.productNum}}">
<br>
<label>Estimated Quantity</label>
<input name="quantity" type="number" value="{{order.quantity}}">
<br>
<label>Estimated <b>Individual</b> Cost</label>
<input name="cost" type="number" value="{{order.cost}}">
<br>
<label>Tracking Number</label>
<input name="trackingNumber" type="text">
<br>
<br>
<label>Comments:</label>
<input type="text" name="comments">
<br>
<button type="submit">Edit Order</button>
<input style="display: none" name="id" value="{{order._id}}".
</form>

<h3>Status</h3>
{{#if order.isApproved}}
<h3><small>Order Approved</small></h3>
{{#if order.isOrdered}}
<h3><small>Item(s) Ordered</small></h3>
{{else}}
<h3><small>Item(s) pending order</small></h3>
{{/if}}
{{else}}
<h3><small>Order pending approval</small></h3>
{{/if}}
